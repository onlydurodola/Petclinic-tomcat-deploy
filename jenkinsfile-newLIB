@Library('interesting-kovu')_
pipeline {
    agent agent-kovu
    
    stages {
        stage('SCM Checkout') {
            steps {
                gitCheckout()
            }
        }

        stage('Compile') {
            steps {
                mvnCompile()
            }
        }

        stage('Validate') {
            steps { 
                mvnValidate()
            }
        }

        stage('Test') {
            steps {
                mvnTest()
            }
        }

        stage('Build') {
            steps { 
                mvnInstall()
            }
        }

        stage('Deploy to DEV') {
            steps {
                deployDev()
            }
        }

        stage('Deploy to Stage') {
            steps {
                deployStage()
            }
        }

        stage('Deploy to Prod') {
            steps {
                deployProd()
            }
        }
    }
}
